<h2>Create new Contact</h2>

<%= form_for @contacts do |form_builder| %>

	<p>
    <%= form_builder.label :first_name, :class => "label" %>
    <%= form_builder.text_field :first_name, :class => "input" %>
  </p>

  <p>
    <%= form_builder.label :last_name, :class => "label" %>
    <%= form_builder.text_field :last_name, :class => "input" %>
  </p>

  <p>
    <%= form_builder.label :email, :class => "label" %>
    <%= form_builder.text_field :email, :class => "input" %>
  </p>

  <p>
    <%= form_builder.label :note, :class => "label" %>
    <%= form_builder.text_field :note, :class => "input" %>
  </p>

  <p>
    <%= form_builder.label :phone_number, :class => "label" %>
    <%= form_builder.number_field :phone_number, :class => "input" %>
  </p>

  <%= form_builder.submit %>
  <% end %>


