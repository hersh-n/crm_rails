
<div class="sign_in">
<% if flash[:error] -%>
  <%= flash[:error] %>
<% end -%>

<%= form_tag sessions_path do %>

<p>
<%= label_tag :username, nil, class: "label" %>
<%= text_field_tag :username, nil, class: "input" %>
</p>


<p>
<%= label_tag :password %>
<%= password_field_tag :password %>
</p>

<%= submit_tag "Sign In" %>

<a class="bold" href="/users/new"><li class="button">Sign Up</li></a>

<% end %>

</div>